      button.btn.btn-default.btn-xs.pull-right(type="button" onclick='hidePanel("#present-body", $(this));')
        span.glyphicon.glyphicon-chevron-up(aria-hidden="true")
    .panel-collapse.in#present-body
      #presenter
        #output
